                img(ng-show='ifFullpage(pageNumber)').logo2(src="https://cdn3.iconfinder.com/data/icons/ballicons-free/128/map-.png")
                div
                    //div(ng-include="'/partials/navigation/left-nav'")
                    nav.col-xs-12.menu#main-menu
