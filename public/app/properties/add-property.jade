google-places(location='location', lat="property.latCoord", lon="property.longCoord")
  form.form-horizontal(role='form')
    .form-group
      // type
      label.col-sm-12.control-label()
        p.pull-left Type
      .col-sm-12
        p
          fieldset.inline
            label
              input(type='radio', ng-model='property.type', name='homeOption1', ng-checked='true', value='Residential')
              |     Home
            label
              input(type='radio', ng-model='property.type', name='commercialpOption2', value='Commercial')
              |     Commercial
      // date of completion
      label.col-sm-12.control-label()
        p.pull-left Date of Completion
      .col-sm-12
        input.form-control(type='text', datepicker-popup='{{format}}', ng-model='property.dateComplete',
        is-open='opened', min-date='minDate', max-date="'2015-06-22'", datepicker-options='dateOptions',
        date-disabled='disabled(date, mode)', ng-required='true', close-text='Close')
        span.input-group-btn
          button.btn.btn-default(type='button', ng-click='property.openDatePicker($event)')
            i.glyphicon.glyphicon-calendar

      // address
      label.col-sm-12.control-label()
        p.pull-left Address
      .col-sm-12
        input#google_places_ac.input-block-level(placeholder='Enter Address Here', name='google_places_ac', type='text')
      // lat
      label.col-sm-12.control-label()
        p.pull-left Lat
      .col-sm-12
        input(ng-model='property.latCoord')
      // lon
      label.col-sm-12.control-label()
        p.pull-left Lon
      .col-sm-12
        input(ng-model='property.longCoord')


      // improvement size
      label.col-sm-12.control-label()
        p.pull-left City
      .col-sm-12
        input.form-control(type='text', ng-model='property.address.city', placeholder=' City ')
      // improvement size
      label.col-sm-12.control-label()
        p.pull-left Improvement Size
      .col-sm-12
        input.form-control(type='text', ng-model='property.improvementSize', placeholder=' Improvement Size ')
      // acres
      label.col-sm-12.control-label()
        p.pull-left Acres
      .col-sm-12
        input.form-control(type='text', ng-model='property.type', placeholder=' Acres ')
      // relevant condition
      label.col-sm-12.control-label()
        p.pull-left Relevant Condition
      .col-sm-12
        p
          fieldset.inline
            label
              input(type='radio', ng-model='property.condition', name='goodOption1', ng-checked='true', value='Good')
              |     Good
            label
              input(type='radio', ng-model='property.condition', name='poorOption2', value='Poor')
              |     Poor
.modal-footer
  button.btn.btn-large.btn-primary(ng-click='addProperty(property)') Add Property
  //button.btn.btn-large.btn-primary(ng-click='property.addProperty()') Add Property
  button.btn.btn-warning(ng-click='cancel()') Cancel
