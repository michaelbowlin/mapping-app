script(type='text/ng-template', id='myModalContent22.html').
    <div class="modal-header">
    <h3 class="modal-title">I'm a modal!</h3>
    </div>
    <div class="modal-body">
    <google-places location="location"></google-places>
    <form class="form-horizontal" role="form">
    <div class="form-group">
    <!-- type -->
    <label for="partnumber" class="col-sm-12 control-label">
    <p class="pull-left">Type</p>
    </label>
    <div class="col-sm-12">
    <p>
    <fieldset class="inline">
    <label>
    <input type="radio"  ng-model="newprop.level" name="homeOption1" ng-checked="true"  value="Residential"/>
    Home
    </label>
    <label>
    <input type="radio"  ng-model="newprop.level" name="commercialpOption2" value="Commercial" />
    Commercial
    </label>
    </fieldset>
    </p>
    </div>
    <!-- date of completion -->
    <label for="partnumber" class="col-sm-12 control-label">
    <p class="pull-left">Date of Completion</p>
    </label>
    <div class="col-sm-12">
    <input class="form-control" type="text" class="form-control" datepicker-popup="{{format}}" ng-model="newprop.dateOfCompletion"  is-open="opened" min-date="minDate" max-date="'2015-06-22'" datepicker-options="dateOptions" date-disabled="disabled(date, mode)" ng-required="true" close-text="Close" />
    <span class="input-group-btn">
    <button type="button" class="btn btn-default" ng-click="openDatePicker($event)"><i class="glyphicon glyphicon-calendar"></i></button>
    </span>
    </div>
    <!-- address -->
    <label for="partnumber" class="col-sm-12 control-label">
    <p class="pull-left">Address</p>
    </label>
    <div class="col-sm-12">
    <input placeholder="Enter Address Here" id="google_places_ac" name="google_places_ac" type="text" class="input-block-level" ng-model="newprop.latlon" />
    </div>
    <!-- improvement size -->
    <label for="partnumber" class="col-sm-12 control-label">
    <p class="pull-left">City</p>
    </label>
    <div class="col-sm-12">
    <input class="form-control" type="text" ng-model="newprop.city" placeholder=" City " />
    </div>
    <!-- improvement size -->
    <label for="partnumber" class="col-sm-12 control-label">
    <p class="pull-left">Improvement Size</p>
    </label>
    <div class="col-sm-12">
    <input class="form-control" type="text" ng-model="newprop.improvementSize" placeholder=" Improvement Size " />
    </div>
    <!-- acres -->
    <label for="partnumber" class="col-sm-12 control-label">
    <p class="pull-left">Acres</p>
    </label>
    <div class="col-sm-12">
    <input class="form-control" type="text" ng-model="newprop.acres" placeholder=" Acres " />
    </div>
    <!-- relevant condition -->
    <label for="partnumber" class="col-sm-12 control-label">
    <p class="pull-left">Relevant Condition</p>
    </label>
    <div class="col-sm-12">
    <p>
    <fieldset class="inline">
    <label>
    <input type="radio"  ng-model="newprop.level2" name="goodOption1" ng-checked="true"  value="Good"/>
    Good
    </label>
    <label>
    <input type="radio"  ng-model="newprop.level2" name="poorOption2" value="Poor" />
    Poor
    </label>
    </fieldset>
    </p>
    </div>
    </div>
    </form>
    </div>
    <div class="modal-footer">
    <button ng-click="doSearch(newprop)" class="btn btn-large btn-primary">Add Property</button>
    <button class="btn btn-warning" ng-click="cancel()">Cancel</button>
    </div>